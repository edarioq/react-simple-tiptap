{
  "name": "react-simple-tiptap",
  "version": "1.0.1",
  "description": "A pre-configured text editor component for React, based on Tiptap's Simple Editor template",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsup",
    "build:watch": "tsup --watch",
    "preview": "vite preview",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@floating-ui/react": "^0.27.15",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-popover": "^1.1.14",
    "@tiptap/extension-highlight": "^3.0.9",
    "@tiptap/extension-horizontal-rule": "^3.0.9",
    "@tiptap/extension-image": "^3.0.9",
    "@tiptap/extension-list": "^3.0.9",
    "@tiptap/extension-subscript": "^3.0.9",
    "@tiptap/extension-superscript": "^3.0.9",
    "@tiptap/extension-text-align": "^3.0.9",
    "@tiptap/extension-typography": "^3.0.9",
    "@tiptap/extensions": "^3.0.9",
    "@tiptap/pm": "^3.0.9",
    "@tiptap/react": "^3.0.9",
    "@tiptap/starter-kit": "^3.0.9",
    "clsx": "^2.1.1",
    "lodash.throttle": "^4.1.1",
    "react-hotkeys-hook": "^5.1.0"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
  },
  "devDependencies": {
    "@types/lodash.throttle": "^4.1.9",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "sass": "^1.89.2",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^4.0.0"
  },
  "keywords": [
    "react",
    "text-editor",
    "rich-text",
    "component",
    "ui"
  ],
  "author": "Your Name",
  "license": "MIT"
}
